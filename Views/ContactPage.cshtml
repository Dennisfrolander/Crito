@using Umbraco.Cms.Web.Common.PublishedModels;
@using Crito.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "_Layout.cshtml";

    var contactForm = new ContactForm();
}

@await Html.PartialAsync("_BreadcrumbSection")


<section class="connect-information">
    <div class="container">
        <div class="row d-flex justify-content-md-evenly flex-md-row">
            <div
                class="col-4 col-md-3 text-information d-flex flex-column justify-content-between"
            >
                <div class="row d-flex">
                    <div class="col-3 col-lg-4 text-end pe-3">
                        <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <div class="col-9 col-lg-8">
                        <h2>Visit us</h2>
                        <p>@Model.Value("contactInformationStreetName")</p>
                        <p>@Model.Value("contactInformationPostalCode") @Model.Value("contactInformationCity")</p>
                    </div>
                </div>
            </div>
            <div
                class="col-4 col-md-3 text-information d-flex flex-column justify-content-between"
            >
                <div class="row d-flex">
                    <div class="col-3 col-lg-4  text-end pe-3">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="col-9 col-lg-8">
                        <h2>Call us</h2>
                        <p>@Model.Value("contactInformationPhone1")</p>
                        <p>@Model.Value("contactInformationPhone2")</p>
                    </div>
                </div>
            </div>
            <div
                class="col-4 col-md-3 text-information d-flex flex-column justify-content-between"
            >
                <div class="row d-flex">
                    <div class="col-3 col-lg-4  text-end pe-3">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <div class="col-9 col-lg-8">
                        <h2>Email us</h2>
                        <p>@Model.Value("contactInformationEmail1")</p>
                        <p>@Model.Value("contactInformationEmail2")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


 <section class="contact-us-form">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-4">
                <h2>Leave us a message for any information</h2>
            </div>
            <div class="col-12 px-5 py-3">

                <div class="row d-flex justify-content-center text-center">
                @using (Html.BeginUmbracoForm("Index", "Contacts", FormMethod.Post))
                   {
                    <input
                        asp-for="@contactForm.Name"
                        class="col-10 mb-3"
                        type="text"
                        placeholder="Name*"
                    />
                    <input asp-for="@contactForm.Email"
                        class="col-10 mb-3"
                        type="email"
                        placeholder="email*"
                    />
                    <textarea asp-for="@contactForm.Message"
                        placeholder="Your Message*"
                        class="col-10 mb-5"
                        rows="4"
                        cols="50"
                    ></textarea>
                    <button type="submit" class="col-10 yellow-button-anchor">
                        Send Message
                        <i class="fa-solid fa-arrow-up-right"></i>
                    </button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


<section>
    <iframe
    src="@Model.Value("googleMapsUrl")"
    
    class="w-100 mt-5"
    height="450"
    style="border: 0"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
></iframe>
</section>